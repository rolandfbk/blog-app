<main>
  <div class="list">
      <div class="user">
        <div class="user_details">
          <div class="user_photo">
            <%= image_tag("mybaby.png") %>
          </div>
          <div class="user_name">
            <h2><%= @user.name %></h2>
            <h4>Number of posts: <%= @user.post_counter %></h4>
          </div>
        </div>
      </div>

      <div class="user_bio">
        <h3>Bio:</h3>
        <p><%= @user.bio %></p>
      </div>

      <% @user.most_recent_posts.each_with_index do |post, index| %>
        <div class="user_posts">
            <h3>Post #<%=index+1%>: <%= post.title %></h3>
            <p><%= post.text %></p>
            <h4><span>Comment <%= post.comments_counter %></span> <span>|</span> <span>Likes <%= post.likes_counter %></span></h4>
        </div>
      <% end %>
      
      <div class="btn_bottom">
          <%= link_to "See all posts", user_posts_path(@user), class: "btn_all_posts" %>
      </div>
  </div>
</main>